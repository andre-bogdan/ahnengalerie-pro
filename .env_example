#--------------------------------------------------------------------
# AHNENGALERIE PRO - PRODUCTION
#--------------------------------------------------------------------

CI_ENVIRONMENT = production
#CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

#online
#app.baseURL = 'https://deine-domain.de/'
#offline
app.baseURL = 'http://localhost:8080/'
app.indexPage = ''
app.defaultTimezone = 'Europe/Berlin'
app.defaultLocale = 'de'

#--------------------------------------------------------------------
# DATABASE (SQLite)
#--------------------------------------------------------------------

#online
#database.default.database = /var/www/vhosts/---/deine-domain.de/writable/database/genealogy.db
#offline
database.default.database = /opt/lampp/htdocs/opensource.ahnengalerie-pro/writable/database/genealogy.db
database.default.DBDriver = SQLite3

#--------------------------------------------------------------------
# SESSIONS
#--------------------------------------------------------------------

app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'ahnengalerie_session'
app.sessionSavePath = 'writable/session'
app.sessionExpiration = 7200
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# SECURITY (CSRF DEAKTIVIERT f√ºr Test)
#--------------------------------------------------------------------

# security.csrfProtection = 'session'
# security.tokenRandomize = true

#--------------------------------------------------------------------
# COOKIES
#--------------------------------------------------------------------

cookie.prefix = ''
cookie.domain = ''
cookie.path = /
cookie.secure = false
cookie.httponly = true
cookie.samesite = Lax

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# CUSTOM APP SETTINGS
#--------------------------------------------------------------------

app.photoMaxSize = 5242880
app.photoAllowedTypes = 'jpg,jpeg,png,gif,webp'

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

email.fromEmail = 'mail@deine-domain.de'
email.fromName = 'Opensource Ahnengalerie Pro'
# Support-Email (wo Support-Anfragen ankommen)
email.supportEmail = 'support@deine-domain.de'

#--------------------------------------------------------------------
# HELP SYSTEM
#--------------------------------------------------------------------

help.contentPath = ../shared/help-content
help.defaultLanguage = de

#--------------------------------------------------------------------
# Newsletter
#--------------------------------------------------------------------

app.internalNewsletterKey = "dein geheimes passwort"
